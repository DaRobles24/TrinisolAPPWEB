@model Trinisol.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<h2>Editar Categoría</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Guardar Cambios</button>
    <a href="/Categorias" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
