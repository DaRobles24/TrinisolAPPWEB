@model Trinisol.Models.ViewModels.FacturaViewModel

@{
    ViewData["Title"] = "Generar Factura";
}

<h2>Generar Factura</h2>

<form asp-action="Preview" method="post">

    <div class="mb-3">
        <label>Número de Factura</label>
        <input asp-for="NumeroFactura" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Fecha</label>
        <input asp-for="Fecha" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Cliente</label>
        <select asp-for="ClienteId" class="form-control">
            <option value="">Seleccione un cliente</option>
            @foreach (var c in Model.Clientes)
            {
                <option value="@c.Id">@c.Nombre</option>
            }
        </select>
    </div>

    <h4>Productos</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Presentación</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody id="items-body">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <select asp-for="Items[@i].ProductoId" class="form-control product-select">
                            <option value="">Seleccione</option>
                            @foreach (var p in Model.Productos)
                            {
                                <option value="@p.Id">@p.Nombre</option>
                            }
                        </select>
                    </td>

                    <td>
                        <select asp-for="Items[@i].PresentacionId" class="form-control presentacion-select">
                            <option value="">Seleccione presentación</option>
                            @foreach (var pr in Model.Presentaciones)
                            {
                                <option value="@pr.Id" data-producto="@pr.ProductoId">
                                    @pr.NombrePresentacion (₡@pr.PrecioUnitario)
                                </option>
                            }
                        </select>
                    </td>

                    <td>
                        <input asp-for="Items[@i].Cantidad" class="form-control" type="number" min="1" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="button" class="btn btn-secondary" onclick="addItem()">Agregar Producto</button>

    <br /><br />

    <button type="submit" class="btn btn-primary">Vista Previa</button>
</form>

@section Scripts {
    <script>
        function addItem() {
            const index = document.querySelectorAll("#items-body tr").length;

            const row = `
            <tr>
                <td>
                    <select name="Items[${index}].ProductoId" class="form-control product-select">
                        <option value="">Seleccione</option>
                        ${generateProducts()}
                    </select>
                </td>
                <td>
                    <select name="Items[${index}].PresentacionId" class="form-control presentacion-select">
                        <option value="">Seleccione presentación</option>
                        ${generatePresentaciones()}
                    </select>
                </td>
                <td>
                    <input name="Items[${index}].Cantidad" class="form-control" type="number" min="1" />
                </td>
            </tr>
            `;

            document.querySelector("#items-body").insertAdjacentHTML("beforeend", row);
        }

        function generateProducts() {
            return `
                @foreach (var p in Model.Productos)
                {
                        <option value="@p.Id">@p.Nombre</option>
                }
            `;
        }

        function generatePresentaciones() {
            return `
                @foreach (var pr in Model.Presentaciones)
                {
                        <option value="@pr.Id" data-producto="@pr.ProductoId">
                            @pr.NombrePresentacion (₡@pr.PrecioUnitario)
                        </option>
                }
            `;
        }
    </script>
}
