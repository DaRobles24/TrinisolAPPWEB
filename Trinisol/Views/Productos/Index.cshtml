@model IEnumerable<Trinisol.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<h2>Productos</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-controller="Productos" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Nuevo Producto
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Código</th>
            <th>Categoría</th>
            <th>Presentaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Codigo</td>

                <!-- Categoría -->
                <td>
                    @if (producto.Categoria != null)
                    {
                        @producto.Categoria.Nombre
                    }
                    else
                    {
                        @Html.Raw("<em>No tiene</em>")
                    }
                </td>

                <!-- Presentaciones -->
                <td>
                    @if (producto.Presentaciones != null && producto.Presentaciones.Any())
                    {
                        @string.Join(", ", producto.Presentaciones.Select(p => p.NombrePresentacion))
                    }
                    else
                    {
                        @Html.Raw("<em>No tiene</em>")
                    }
                </td>

                <!-- Botones -->
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-controller="Productos"
                       asp-action="Edit"
                       asp-route-id="@producto.Id">
                        <i class="bi bi-pencil-fill"></i> Editar
                    </a>

                    <form asp-controller="Productos"
                          asp-action="Delete"
                          asp-route-id="@producto.Id"
                          method="post"
                          style="display:inline"
                          onsubmit="return confirm('¿Seguro que desea eliminar este producto?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
